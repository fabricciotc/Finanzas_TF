<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>eFinance: @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="icon" href="~/logo.png" asp-append-version="true">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: 600; font-size: 18px;">
                    <img width="30" src="~/logo.png" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @{
                    string actionName = this.ViewContext.RouteData.Values["action"].ToString();
                    string controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
                }
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @((controllerName == "Home") ? "btn btn-success text-white" : "text-dark")" style=" font-weight: 600; padding: 6px 12px; border-radius: 20px;" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  @((controllerName == "Clientes") ? "btn btn-success text-white" : "text-dark")" style=" font-weight: 600; padding: 6px 12px; border-radius: 20px;" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  @((controllerName == "ReciboHonorarios") ? "btn btn-success text-white" : "text-dark")" style=" font-weight: 600; padding: 6px 12px; border-radius: 20px;" asp-area="" asp-controller="ReciboHonorarios" asp-action="Index">Cartera</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  @((controllerName == "Cotizador") ? "btn btn-success text-white" : "text-dark")" style=" font-weight: 600; padding: 6px 12px; border-radius: 20px;" asp-area="" asp-controller="Cotizador" asp-action="Index">Cotizar Cartera</a>
                        </li>
                    </ul>
                    <a class="nav-link btn btn-outline-danger" style="border-radius: 20px; font-weight: 600; padding: 6px 12px;" href="@Url.Action("logout","identity")">Cerrar Sesión</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Finanzas_TF - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
