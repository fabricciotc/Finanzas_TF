@model IEnumerable<Finanzas_TF.Models.ReciboHonorarios>

@{
    ViewData["Title"] = "Cartera de 📝 Recibos";
}


<h1 style=" font-size: 2.0rem; margin: 30px 0px; font-weight: 700;">@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-primary text-white" style="float:right;margin-bottom: 0px; font-size: 13px; border-radius: 10px 10px 0px 0px; margin-top: 20px; text-transform: uppercase; font-weight: 500;">
    Emitir Recibo
</a>
<table class="table fcard">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                Monto Inicial
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Retenido)
            </th>
            <th>
                Monto Neto
            </th>
            <th> Tipo de Moneda</th>
            <th>
                Fecha de Emision
            </th>
            <th>
                Fecha de Pago
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @(item.Cliente.RUC +" - "+ item.Cliente.RazonSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Retenido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @(item.Moneda==0?"Soles (S/.)":"Dolares ($)")
            </td>
            <td>
                @(item.FechaEmision.ToString("dd/MM/yyyy"))
            </td>
            <td>
                @(item.FechaPago.ToString("dd/MM/yyyy"))
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
